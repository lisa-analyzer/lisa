class tests {

	rec(n,b) {
		if (n <= 1) 
			return 1;
		else if (b) {
			def x = n - 1;
			return this.aux1(x,b,n);
		} else {
			def x = n - 1;
			return this.aux2(x,b,n);
		}
	}
	
	aux1(n,b) {
		return rec(x,b) + n;
	}
	
	aux2(n,b) {
		return rec(x,b) + n + 1;
	}
	
	main(a,b) {
		def x = this.rec(a,b);
    }
}